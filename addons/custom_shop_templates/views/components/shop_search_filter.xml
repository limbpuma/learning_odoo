<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Shop search and filter component with responsive layout -->

    <data>
        <!-- Shop Search + Filter (Responsive) -->
        <template id="shop_search_filter" name="Shop Search + Filter">
            <t t-set="categories" t-value="categories or []"/>
            <t t-set="category" t-value="category or None"/>
            <t t-set="search_term" t-value="search_term or ''"/>

            <!-- SM/MD: Column Layout -->
            <div class="w-100 h-100 d-inline-flex flex-column justify-content-start align-items-end gap-3 d-lg-none">

                <!-- Search Box - SM/MD -->
                <div class="align-self-stretch tts-halftone-shadow d-flex flex-column justify-content-start align-items-start tts-gap-4">

                    <!-- Search form -->
                    <form method="get" t-att-action="'/shop'" class="align-self-stretch d-inline-flex">
                        <div class="flex-fill d-inline-flex flex-column tts-search-form-container">
                            <div class="align-self-stretch position-relative d-inline-flex">
                                <!-- Search input container -->
                                <div class="flex-fill d-inline-flex flex-column overflow-hidden tts-search-container">
                                    <div class="align-self-stretch d-inline-flex align-items-center gap-2">
                                        <!-- Search submit button -->
                                        <button type="submit"
                                                class="border-0 bg-transparent p-0 flex-shrink-0 d-inline-flex align-items-center"
                                                aria-label="Search">
                                            <img t-att-src="'/custom_shop_templates/static/src/img/icons/icon-search.svg'"
                                                 class="tts-w-16 tts-h-16"
                                                 alt="Search"/>
                                        </button>

                                        <!-- Input -->
                                        <input type="text"
                                               name="search"
                                               t-att-value="search_term"
                                               placeholder="Search by Name or SKU …"
                                               class="flex-fill border-0 bg-transparent tts-input-text tts-outline-none"/>

                                        <!-- Clear button -->
                                        <button type="button"
                                                onclick="const form = this.closest('form'); form.querySelector('input[name=search]').value = ''; form.submit();"
                                                class="border-0 bg-transparent p-0 flex-shrink-0 d-inline-flex align-items-center"
                                                aria-label="Clear search">
                                            <img t-att-src="'/custom_shop_templates/static/src/img/icons/Icon-search-x.svg'"
                                                 class="tts-w-20 tts-h-20"
                                                 alt="Clear"/>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Filter Pills - SM/MD -->
                <div class="align-self-stretch d-inline-flex flex-wrap gap-2 tts-align-content-start">

                    <!-- Show all - Active -->
                    <a t-if="not category"
                       href="/shop"
                       class="d-flex align-items-center justify-content-center gap-2 rounded-pill text-decoration-none tts-pill-active">
                        <div class="fw-bold text-nowrap tts-pill-text">
                            Show all
                        </div>
                    </a>

                    <!-- Show all - Inactive -->
                    <a t-else=""
                       href="/shop"
                       class="d-flex align-items-center justify-content-center rounded-pill text-decoration-none tts-pill-inactive">
                        <div class="fw-bold text-nowrap tts-pill-text-inactive">
                            Show all
                        </div>
                    </a>

                    <!-- Category pills -->
                    <t t-foreach="categories" t-as="cat">
                        <!-- Active -->
                        <a t-if="category and cat.id == category.id"
                           t-attf-href="/shop/category/{{ slug(cat) }}"
                           class="d-flex align-items-center justify-content-center gap-2 rounded-pill text-decoration-none tts-pill-active">
                            <div class="fw-bold text-nowrap tts-pill-text"
                                 t-esc="cat.name"/>
                        </a>

                        <!-- Inactive -->
                        <a t-else=""
                           t-attf-href="/shop/category/{{ slug(cat) }}"
                           class="d-flex align-items-center justify-content-center rounded-pill text-decoration-none tts-pill-inactive">
                            <div class="fw-bold text-nowrap tts-pill-text-inactive"
                                 t-esc="cat.name"/>
                        </a>
                    </t>
                </div>
            </div>

            <!-- LG: Row Layout (Pills left, Search right) -->
            <div class="w-100 h-100 d-none d-lg-inline-flex justify-content-end align-items-start gap-3">

                <!-- Filter Pills - LG (Left side, flex grow) -->
                <div class="d-flex flex-wrap gap-2 tts-flex-grow-align-start">

                    <!-- Show all - Active -->
                    <a t-if="not category"
                       href="/shop"
                       class="d-flex align-items-center justify-content-center gap-2 rounded-pill text-decoration-none tts-pill-active">
                        <div class="fw-bold text-nowrap tts-pill-text">
                            Show all
                        </div>
                    </a>

                    <!-- Show all - Inactive -->
                    <a t-else=""
                       href="/shop"
                       class="d-flex align-items-center justify-content-center rounded-pill text-decoration-none tts-pill-inactive">
                        <div class="fw-bold text-nowrap tts-pill-text-inactive">
                            Show all
                        </div>
                    </a>

                    <!-- Category pills -->
                    <t t-foreach="categories" t-as="cat">
                        <!-- Active -->
                        <a t-if="category and cat.id == category.id"
                           t-attf-href="/shop/category/{{ slug(cat) }}"
                           class="d-flex align-items-center justify-content-center gap-2 rounded-pill text-decoration-none tts-pill-active">
                            <div class="fw-bold text-nowrap tts-pill-text"
                                 t-esc="cat.name"/>
                        </a>

                        <!-- Inactive -->
                        <a t-else=""
                           t-attf-href="/shop/category/{{ slug(cat) }}"
                           class="d-flex align-items-center justify-content-center rounded-pill text-decoration-none tts-pill-inactive">
                            <div class="fw-bold text-nowrap tts-pill-text-inactive"
                                 t-esc="cat.name"/>
                        </a>
                    </t>
                </div>

                <!-- Search Box - LG (Right side, 262px) -->
                <div class="tts-halftone-shadow d-inline-flex flex-column tts-w-262 tts-gap-4">

                    <!-- Search form -->
                    <form method="get" t-att-action="'/shop'" class="align-self-stretch d-inline-flex">
                        <div class="flex-fill d-inline-flex flex-column tts-search-form-container">
                            <div class="align-self-stretch position-relative d-inline-flex">
                                <!-- Search input container -->
                                <div class="flex-fill d-inline-flex flex-column overflow-hidden tts-search-container">
                                    <div class="align-self-stretch d-inline-flex align-items-center gap-2">
                                        <!-- Search submit button -->
                                        <button type="submit"
                                                class="border-0 bg-transparent p-0 flex-shrink-0 d-inline-flex align-items-center"
                                                aria-label="Search">
                                            <img t-att-src="'/custom_shop_templates/static/src/img/icons/icon-search.svg'"
                                                 class="tts-w-16 tts-h-16"
                                                 alt="Search"/>
                                        </button>

                                        <!-- Input -->
                                        <input type="text"
                                               name="search"
                                               t-att-value="search_term"
                                               placeholder="Search by Name or SKU …"
                                               class="flex-fill border-0 bg-transparent tts-input-text tts-outline-none"/>

                                        <!-- Clear button -->
                                        <button type="button"
                                                onclick="const form = this.closest('form'); form.querySelector('input[name=search]').value = ''; form.submit();"
                                                class="border-0 bg-transparent p-0 flex-shrink-0 d-inline-flex align-items-center"
                                                aria-label="Clear search">
                                            <img t-att-src="'/custom_shop_templates/static/src/img/icons/Icon-search-x.svg'"
                                                 class="tts-w-20 tts-h-20"
                                                 alt="Clear"/>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </template>
    </data>
</odoo>
